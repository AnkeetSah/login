  }
  .navbar {
    min-height: 70px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 24px;
    background-color: antiquewhite;
  }
  .nav-menu {
    display: flex;
    justify-content: item space-between;
    gap: 60px;
  }

  .nav-branding {
    font-size: 2rem;
   
  }

  .nav-link {
    transition: 0.7s ease;
    font-size: 20px;
    display: block;
    font-weight: bolder;
    padding: 9px;
    border-radius: 50px;
  }
  .nav-link:hover {
    background-color: rgb(16, 14, 5);
    /* background-color: #675cff; */
    color: antiquewhite;
    -webkit-text-stroke:0px rgb(17, 15, 15);
  }

  .hamburger {
    cursor: pointer;
    display: none;
  }

  .bar {
    width: 25px;
    height: 3px;
    margin: 5px auto;
    -webkit-transition: all 0.3s ease-in-out;
    transition: all 0.3s ease-in-out;
    background-color: rgb(17, 8, 8);
  }

  .container{
   padding: 10px;
  width: 100%;
  display: grid;
   height: 100vh;
  grid-template-columns: .4fr .4fr .4fr;
  grid-template-rows:.5fr .2fr;
  grid-gap: 20px;
  grid-template-areas: "child1 child2 child3"
                        "item1 item2 item3"
  }

   .child1{
    grid-area: child1;
   }
   .child2{
    grid-area: child2;
   }.child3{
    grid-area: child3;
   }
    
   .item1{
    grid-area: item1;
   }
   .item2{
    grid-area: item2;
   }
   .item3{
    grid-area: item3;
   }


